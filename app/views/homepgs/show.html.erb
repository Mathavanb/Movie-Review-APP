<% if notice %>
  <p id="notice" class="alert alert-success" role="alert"><%= notice %></p>
  <script>
      setTimeout(function() {
          document.getElementById("notice").remove();
      }, 5000); // remove after 5 seconds (5000 milliseconds)
  </script>
<% end %>

